<?xml version="1.0" encoding="UTF-8"?>
<configuration status="INFO" monitorInterval="30">
  <!--先定义所有的appender-->
  <appenders>
    <!--这个输出控制台的配置-->
    <console name="Console" target="SYSTEM_OUT">
      <!--输出日志的格式-->
      <!--<PatternLayout pattern="[%d] %highlight{${LOG_LEVEL_PATTERN:-%5p}}{FATAL=white, ERROR=red, WARN=blue, INFO=black, DEBUG=green, TRACE=blue} %style{${sys:PID}}{magenta} [%15.15t] %style{%-40.40C{1.}}{cyan} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>-->
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%highlight{%p}] [%t] [%highlight{%C}] [%line] : %msg%n"/>
    </console>
  </appenders>
  <loggers>
    <root level="all">
      <appender-ref ref="Console"/>
    </root>
  </loggers>
</configuration>